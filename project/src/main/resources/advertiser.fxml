<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.spbstu.archNews.controller.AdvertiserController">
    <children>
        <AnchorPane prefHeight="82.0" prefWidth="640.0" style="-fx-background-color: #333;">
            <children>
                <Label layoutX="37.0" layoutY="15.0" text="ArchNews" textFill="WHITE">
                    <font>
                        <Font size="26.0"/>
                    </font>
                </Label>
                <Button fx:id="logOutBut" layoutX="557.0" layoutY="22.0" mnemonicParsing="false" text="Выйти"/>
                <Label layoutX="267.0" layoutY="21.0" text="Рекламодатель" textFill="WHITE">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="340.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="createNew" layoutX="473.0" layoutY="14.0" mnemonicParsing="false"
                        text="Создать новую зявку"/>
                <Label layoutX="40.0" layoutY="19.0" text="Список созданных заявок:"/>
                <Label layoutX="473.0" layoutY="307.0" text="Вы вошли как advertiser1">
                    <font>
                        <Font name="System Italic" size="13.0"/>
                    </font>
                </Label>
                <TableView fx:id="advertTable" layoutX="37.0" layoutY="50.0" prefHeight="254.0" prefWidth="580.0">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="75.0" text="id"/>
                        <TableColumn fx:id="colStatus" prefWidth="75.0" text="legal Data"/>
                        <TableColumn fx:id="colDateOfCreation" prefWidth="100.0" text="date of open"/>
                        <TableColumn fx:id="colCost" text="cost"/>
                        <TableColumn fx:id="colDesc" text="status"/>
                        <TableColumn fx:id="colChange" text="Действие"/>
                        <TableColumn fx:id="colChange1" text="Оплата"/>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</VBox>
