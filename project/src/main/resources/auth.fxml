<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.spbstu.archNews.controller.AuthController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="92.0" prefWidth="640.0"
                    style="-fx-background-color: #333;" VBox.vgrow="ALWAYS">
            <children>
                <Label layoutX="231.0" layoutY="14.0" text="Авторизация" textFill="WHITE">
                    <font>
                        <Font size="35.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="336.0" prefWidth="640.0" style="-fx-background-color: #eee;">
            <children>
                <TextField fx:id="loginField" layoutX="219.0" layoutY="46.0" prefHeight="27.0" prefWidth="203.0"
                           promptText="Логин"
                           style="-fx-background-color: white; -fx-border-color: silver; -fx-border-radius: 5; -fx-border-width: 1; -fx-background-radius: 5;"/>
                <TextField fx:id="passwordField" layoutX="218.0" layoutY="103.0" prefHeight="24.0" prefWidth="203.0"
                           promptText="Пароль"
                           style="-fx-border-color: silver; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: white; -fx-background-radius: 5;"/>
                <Button fx:id="loginSignInButton" layoutX="293.0" layoutY="165.0" mnemonicParsing="false"
                        style="-fx-background-radius: 5;" text="Войти"/>
                <Button fx:id="regBut" layoutX="272.0" layoutY="226.0" mnemonicParsing="false"
                        style="-fx-background-radius: 5;" text="Регистрация"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
